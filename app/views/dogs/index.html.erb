<main class="dog-listing-container">
	<div class="row">
		<div class="col-12">
			<h2>Find Your Perfect Companion</h2>
			<h3>Search by Breed</h3>
			<input type="search" id="breedSearch" name="breedSearch" class="form-control mb-3" placeholder="Enter breed here" aria-label="Search dogs by breed">
			<p>Explore our database of dogs ready for adoption. Use the search box above to filter by breed.</p>
			<%= link_to 'Add New Dog', new_dog_path, class: 'btn btn-success mb-3' %>
			<table class="table">
        <thead>
					<tr>
							<th>Name</th>
							<th>Age</th>
							<th>Breed</th>
							<th>Description</th>
							<th>Active?</th>
							<th>Actions</th>
					</tr>
        </thead>
        <tbody>
					<tr>
						<td>Charlie</td>
						<td>2 years</td>
						<td>Labrador</td>
						<td>Very energetic and loves to play fetch.</td>
						<td><input type="checkbox" class="form-check-input" checked></td>
						<td>
							<button class="btn btn-primary btn-sm">Edit</button>
							<button class="btn btn-danger btn-sm">Delete</button>
						</td>
					</tr>
        </tbody>
    </table>
	</div>
</main>

